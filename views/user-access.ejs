 <div class="p-4 sm:ml-64">
    <p class="font-bold text-2xl my-4">Authorize Access</p>
    <div class="flex flex-col lg:flex-row justify-center items-center gap-10 md:gap-20">
      <div class="max-w-md w-full">
         <div class="section border border-white rounded p-8">
            <h1 class="text-center font-semibold text-xl pb-4">Scan QR Codes</h1>
            <div id="my-qr-reader" class="p-5 border border-[#b2b2b2] rounded-lg flex flex-col justify-center items-center">
            </div>
         </div>
      </div>
      <div class="w-full sm:w-[40%] pb-20 md:pb-0">
         <div class="max-w-xl mx-auto mt-5">
            <p class="text-xl font-semibold pb-4">Details</i></p>
            <form action="/access/grant" method="post">
                <%- messages('messages', locals) %>
                <div class="hidden">
                  <input type="text" id="id" readonly class="hidden" name="id">
                  <input type="text" id="logged" readonly class="hidden" name="logged" value="<%= theuser.firstname %> <%= theuser.lastname %>">
                </div>
                <div class="relative mb-5">
                    <input type="text" id="floating_filled" class="block rounded-t-2xl px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-500 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " name="firstname" readonly />
                    <label for="floating_filled" class="absolute text-sm text-gray-800 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">First name</label>
                </div>
                <div class="relative mb-5">
                    <input type="text" id="floating_filled1" class="block rounded-t-2xl px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-500 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " name="lastname" readonly/>
                    <label for="floating_filled1" class="absolute text-sm text-gray-800 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Last name</label>
                </div>
                <div class="relative mb-5">
                    <input type="text" id="floating_filled2" class="block rounded-t-2xl px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-500 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " name="supervisor" readonly/>
                    <label for="floating_filled2" class="absolute text-sm text-gray-800 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Supervisor</label>
                </div>
                <div class="relative mb-5">
                    <input type="text" id="floating_filled3" class="block rounded-t-2xl px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-500 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " name="location" readonly/>
                    <label for="floating_filled3" class="absolute text-sm text-gray-800 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Location</label>
                </div>
                <div class="relative mb-5">
                    <input datepicker datepicker-autohide type="text" id="floating_filled4" class="block rounded-t-2xl px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-500 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " name="expiry" readonly/>
                    <label for="floating_filled4" class="absolute text-sm text-gray-800 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Expiration Date</label>
                </div>
                <div class="relative mb-5">
                  <input type="text" id="floating_filled11" class="block rounded-t-2xl px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50 dark:bg-gray-700 border-0 border-b-2 border-gray-500 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " name="card"/>
                  <label for="floating_filled11" class="absolute text-sm text-gray-800 dark:text-gray-400 duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto">Card Number</label>
              </div>
                <div class="flex justify-between gap-20">
                  <button type="submit" class="text-white bg-green-700 hover:bg-green-800 border-none focus:outline-nonefont-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800">Grant Access</button>
                            
                  <button type="submit" class="text-white bg-red-700 hover:bg-red-800 border-none focus:ring-4 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" formaction="/access/deny">Deny Access</button>
                </div>            
            </form>
        </div>
      </div>
  </div>
 </div>
 
</body>

<script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

<script>
   
      // If found you qr code
      function onScanSuccess(decodeText, decodeResult) {
         getProfile(decodeText);
         console.log(decodeResult)
         htmlscanner.pause()
      }
   
      let htmlscanner = new Html5QrcodeScanner(
         "my-qr-reader",
         { fps: 10, qrbos: 250 }
      );
      htmlscanner.render(onScanSuccess);


   function getProfile(decodeText){
      fetch(`/access/${decodeText}`, {
      method:'GET'
   })
   .then(response => {
    if (!response.ok) {
      alert(`User Not Found, Try Again`);
      htmlscanner.resume()
    } else{
      return response.json()
    };
  })
   .then(data => details(data))
   .catch(err =>{
      console.log(err)
   })
   }

   function details(data){
      const {firstname, lastname, supervisor, location, expiry} = data

      let inputID = document.querySelector('#id')
      let inputFirstName = document.querySelector('#floating_filled')
      let inputLastName = document.querySelector('#floating_filled1')
      let inputSupervisor = document.querySelector('#floating_filled2')
      let inputLocation = document.querySelector('#floating_filled3')
      let inputExpiry = document.querySelector('#floating_filled4')

      inputFirstName.value = firstname
      inputLastName.value = lastname
      inputSupervisor.value = supervisor
      inputLocation.value = location
      inputExpiry.value = expiry
      inputID.value = data._id
   }
</script>

</html>